class Solution {
    public int maxVowels(String s, int k) {

        String vowels = "aeiou";
        int vowel_count = 0;

        for (int i = 0; i < k; i++) {
            if (vowels.contains(Character.toString(s.charAt(i)))) {
                vowel_count++;
            }

        }
        int current_count = vowel_count;

        for (int i = k; i < s.length(); i++) {

            if (vowels.contains(Character.toString(s.charAt(i - k)))) {
                current_count--;
            }
            if (vowels.contains(Character.toString(s.charAt(i)))) {
                current_count++;
            }
            vowel_count = Math.max(current_count, vowel_count);
        }

        return vowel_count;

    }

}
